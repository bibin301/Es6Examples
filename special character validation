function alpha(e) {
    var k;
    document.all ? k = e.keyCode : k = e.which;
    return ((k > 65 && k < 91) || (k > 96 && k < 123) || k == 8   || (k >= 48 && k <= 57 || k == 64 ||k == 45 ||k == 46 || k == 95));
}

onkeypress="return alpha(event)"


for tab enter


